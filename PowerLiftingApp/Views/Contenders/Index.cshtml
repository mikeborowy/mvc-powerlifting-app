@{
    ViewBag.Title = "Add Contenders";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Add Contenders</h4>
        <hr />
        <div class="form-group">
            <div id="contenders" class="col-md-10">
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <button id="btnAddContender" class="btn btn-default">Add Contender</button>
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

        $(document).ready(function () {

            var contenders = $('#contenders');

            $('#btnAddContender').click(function (e) {
                e.preventDefault();
                $('<label for="contenderName">Rrequired, at least 4 characters</label><input class="form-control" type="text" name="contenderName" minlength="4" maxlength="30" required/><br/>').appendTo(contenders);
            });

        });

    </script>
}
