@model IEnumerable<PowerLiftingApp.Models.Contender>

@{
    ViewBag.Title = "Personal Records";
}

<h4>Personal Records</h4>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BenchPress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Squat)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Deadlift)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BenchPress)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Squat)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Deadlift)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id })
        </td>
    </tr>
}

</table>
