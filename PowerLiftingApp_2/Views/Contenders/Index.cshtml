@model IEnumerable<PowerLiftingApp_2.Models.Contender>

@{
    ViewBag.Title = "Index";
}

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "contendersNoForm" }))
{
    <div class="form-horizontal">
        <h4>Add Contenders</h4>
        <hr />
        <div class="form-group">
            <div class="col-md-10">
                <div class="col-xs-4">
                    @Html.Label("contendersNo", "Type Number of contenders")
                    @Html.TextBox("contendersNo", null, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">

        $(document).ready(function () {

            $("#contendersNoForm").validate({
                rules: {
                    contendersNo: {
                        required: true,
                        number: true,
                        min: 1,
                        max: 25
                    }
                }
            });

        });

    </script>
}