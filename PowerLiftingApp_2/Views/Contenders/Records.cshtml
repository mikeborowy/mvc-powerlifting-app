@model PowerLiftingApp_2.ViewModels.ContenderViewModel

@{
    ViewBag.Title = "Records";
}

<h2>Records</h2>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Add Contenders</h4>
        <hr />
        @for (int i = 0; i < Model.ContendersList.Count; i++)
        {
            <div class="form-group row">
                <div class="col-md-10">
                    <div class="col-xs-3">
                        @Html.Label("StudentName", "Student Name")
                        @Html.EditorFor(m => m.ContendersList[i].Name, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.ContendersList[i].Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-xs-3">
                        @Html.Label("BenchPress", "Bench Press (kg)")
                        @Html.EditorFor(m => m.ContendersList[i].BenchPress, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.ContendersList[i].BenchPress, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-xs-3">
                        @Html.Label("Squat", "Squat (kg)")
                        @Html.EditorFor(m => m.ContendersList[i].Squat, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.ContendersList[i].Squat, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-xs-3">
                        @Html.Label("Deadlift", "Deadlift (kg)")
                        @Html.EditorFor(m => m.ContendersList[i].Deadlift, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(m => m.ContendersList[i].Deadlift, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
